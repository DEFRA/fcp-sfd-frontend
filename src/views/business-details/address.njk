{% extends 'common/layout.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "common/navigation/back-link.njk" import appBackLink %}
{% from "common/sub-header/macro.njk" import subHeader %}

{% block beforeContent %}
  {{ subHeader(
  businessName = businessName,
  sbi = sbi,
  userName = userName
  ) }}

  {{ appBackLink({href: backLink}) }}
{% endblock %}

{% block content %}
  {# Error summary #}
  {% if error %}
    {{ govukErrorSummary({
        titleText: "There is a problem",
        errorList: error.errorList
    }) }}
  {% endif %}

  {# Main heading #}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              {{ pageTitle }}
            </h1>
          </legend>

          {{ govukInput({
            label: {
              text: "Address line 1"
            },
            hint: {
              text: "Include flat and floor numbers, where appropriate"
            },
            id: "address-1",
            name: "address1",
            value: originalAddress.address1,
            autocomplete: "address-line1",
            errorMessage: {
            text: error.address1.text
          } if error.address1
          }) }}

          {{ govukInput({
            label: {
              text: "Address line 2 (optional)"
            },
            id: "address-2",
            name: "address2",
            value: originalAddress.address2,
            autocomplete: "address-line2",
            errorMessage: {
              text: error.address2.text
            } if error.address2
          }) }}

          {{ govukInput({
            label: {
              text: "Town or city"
            },
            classes: "govuk-!-width-two-thirds",
            id: "address-city",
            name: "addressCity",
            value: originalAddress.addressCity,
            autocomplete: "address-level2",
            errorMessage:{
              text: error.addressCity.text
            } if error.addressCity
          }) }}

          {{ govukInput({
            label: {
              text: "County (optional)"
            },
            classes: "govuk-!-width-two-thirds",
            id: "address-county",
            name: "addressCounty",
            value: originalAddress.addressCounty,
            errorMessage: {
              text: error.addressCounty.text
            } if error.addressCounty
          }) }}

          {{ govukInput({
            label: {
              text: "Postal code or zip code (if you have one)"
            },
            classes: "govuk-input--width-10",
            id: "address-postcode",
            name: "addressPostcode",
            value: originalAddress.addressPostcode,
            autocomplete: "postal-code",
            errorMessage: {
              text: error.addressPostcode.text
            } if error.addressPostcode
          }) }}

          {{ govukInput({
            label: {
              text: "Country"
            },
            classes: "govuk-!-width-two-thirds",
            id: "address-country",
            name: "addressCountry",
            value: originalAddress.addressCountry,
            autocomplete: "country-name",
            errorMessage: {
              text: error.addressCountry.text
            } if error.addressCountry
          }) }}
        </fieldset>

        {{ govukButton({
          text: "Continue",
          preventDoubleClick: true
        }) }}

        <p class="govuk-body"><a href="/business-details" class="govuk-link govuk-link--no-visited-state">Cancel</a></p>
      </form>
    </div>
  </div>
{% endblock %}

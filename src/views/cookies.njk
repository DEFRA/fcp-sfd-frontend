
{% extends 'common/layout.njk' %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "common/navigation/back-link.njk" import appBackLink %}

{% block beforeContent %}
{{ appBackLink({ href: '/business-details'}) }}
{% endblock %}

{% block content %}
  {{ appHeading({
    text: "Cookies"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body">
        Cookies are small files saved on your phone, tablet or computer when you visit a website.
      </p>
      <p class="govuk-body">
        We use cookies to make this site work and collect information about how you use our service.
      </p>

      <h2 class="govuk-heading-m">Essential cookies</h2>
      <p class="govuk-body">
        Essential cookies keep your information secure while you use this service. We do not need to ask permission to use them.
      </p>

      {{ govukTable({
        caption: "Essential cookies",
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        head: [
          {
            text: "Name"
          },
          {
            text: "Purpose"
          },
          {
            text: "Expires"
          }
        ],
        rows: [
          [
            {
              text: "session"
            },
            {
              text: "Stores information about your current session and preferences"
            },
            {
              text: "When you close your browser"
            }
          ]
        ]
      }) }}
    </div>
  </div>
{% endblock %}

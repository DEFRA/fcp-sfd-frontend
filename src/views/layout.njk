{% extends "govuk/template.njk" %}

{# Import GOVUK components globally #}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{# Import custom components globally #}
{% from "common/heading/macro.njk" import appHeading %}

{% set mainClasses = "app-main-wrapper" %}

{% block head %}
  <link href="{{ getAssetPath('stylesheets/application.scss') }}" rel="stylesheet">
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "https://www.gov.uk/",
    classes: "app-header",
    containerClasses: "govuk-width-container",
    serviceName: serviceName,
    serviceUrl: serviceUrl,
    useTudorCrown: true
  }) }}
  <div class="govuk-width-container">
    {% include "common/phase-banner/phase-banner.njk" %}
  </div>
  {% include "common/navigation/navigation.njk" %}
{% endblock %}

{% block pageTitle %}
  {{ pageTitle }} | {{ serviceName }}
{% endblock %}

{% block beforeContent %}
  {% if breadcrumbs.length > 1 %}
    {{ govukBreadcrumbs({
      items: breadcrumbs
    }) }}
  {% endif %}
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "https://www.gov.uk/help/privacy-notice",
          text: "Privacy",
          attributes: {
            target: "_blank",
            rel: "noopener noreferrer"
          }
        },
        {
          href: "https://www.gov.uk/help/cookies",
          text: "Cookies",
          attributes: {
            target: "_blank",
            rel: "noopener noreferrer"
          }
        },
        {
          href: "https://www.gov.uk/help/accessibility-statement",
          text: "Accessibility statement",
          attributes: {
            target: "_blank",
            rel: "noopener noreferrer"
          }
        },
        {
          href: "https://www.gov.uk/government/organisations/rural-payments-agency/about/personal-information-charter",
          text: "Personal Information Charter",
          attributes: {
            target: "_blank",
            rel: "noopener noreferrer"
          }
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ getAssetPath('application.js') }}"></script>
{% endblock %}

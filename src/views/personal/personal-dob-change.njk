{% extends 'common/layout.njk' %}

{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "common/navigation/back-sign-out-link.njk" import appBackSignOutLink with context %}
{% from "common/sub-header/macro.njk" import subHeader %}

{% block beforeContent %}
  {{ subHeader(businessName=businessName, sbi=sbi, userName=userName) }}
  {{ appBackSignOutLink(backLink)}}
{% endblock %}

{% block content %}
  {% if errors %}
    {{ govukErrorSummary({
        titleText: "There is a problem",
        errorList: [
          {
            text: errors.businessEmail.text,
            href: "#business-email"
          }
        ]
    }) }}
  {% endif %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form method="post" novalidate>
      <input type="hidden" name="crumb" value="{{ crumb }}">
      <div class="govuk-form-group">
        {{ govukDateInput({
          id: "dob",
          fieldset: {
            legend: {
              text: pageTitle,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: metaDescription
          },
          items: [
            {
              classes: "govuk-input--width-2 ",
              name: "day",
              value: dobDay,
              id: 'dobDay'
            },
            {
              classes: "govuk-input--width-2 ",
              name: "month",
              value: dobMonth,
              id: 'dobMonth'
            },
            {
              classes: "govuk-input--width-4 ",
              name: "year",
              value: dobYear,
              id: 'dobYear'
            }
          ]
        }) }}
      </div>
      {{ govukButton({ text: "Continue", preventDoubleClick: true }) }}
    </form>
  </div>
</div>
{% endblock %}



